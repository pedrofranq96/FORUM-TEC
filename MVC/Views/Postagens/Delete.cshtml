@model NEGOCIO.Models.Postagem

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza que deseja deletar isso?</h3>
<div>
    <h4>Detalhes do seu post</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraPost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraPost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CaminhoImg)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.CaminhoImg" width="300px" height="auto">
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar ao feed</a>
    </form>
</div>
