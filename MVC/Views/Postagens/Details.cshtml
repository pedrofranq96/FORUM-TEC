@model NEGOCIO.Models.Postagem

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do seus post</h1>

<div>
    <h4>Post de @Model.EmailUsuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraPost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraPost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CaminhoImg)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.CaminhoImg" width="300px" height="auto"/>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar ao feed</a>
</div>
